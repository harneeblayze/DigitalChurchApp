<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content"
    tools:context=".views.onboarding.OnBoardingFragment">

    <ImageView
        android:id="@+id/onboarding_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/ic_jesus"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/description_Text"
        android:layout_width="wrap_content"
        tools:text="Casting all your anxieties on him, because he cares for you"
        android:textColor="@color/textitemcolor"
        android:textStyle="bold"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_below="@+id/onboarding_image"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"/>


</RelativeLayout>