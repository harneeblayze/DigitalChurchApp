<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.digitalchurchapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_homeicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_homeicon_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeW">
        <activity android:name=".views.login.LoginActivity"></activity>
        <activity android:name=".views.signup.SignupActivity" />
        <activity android:name=".views.OnboardingActivity" />
        <activity
            android:name=".views.MainActivity"
            android:theme="@style/AppThemeS">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>